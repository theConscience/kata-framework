        position relative
        width 100%

/*h2*/.info-additional__header
    min-height 327px
    padding-top 196px
    padding-left 34px
    padding-right 33px
    margin 0
    fontHvMedium18_24()
    color c_white
    background-color c_darken-bg
    background-image url(../images/bg-info.png)
    background-repeat no-repeat
    background-position center 68px
    background-size 105px 105px
    text-align center

    @media (max-height xs-y) and (min-width xs)
        min-height calc(327px - 60px)
        padding-top calc(196px - 60px)
        background-position center calc(68px - 45px)

.info-additional__promo-banner
    position relative
    min-height 100px
    padding-top 18px
    padding-right 54px
    padding-left 54px
    fontHvRoman14_20()
    color c_white
    background-color c_contrast
    text-align center

    @media (max-width: xs) and (min-width: xss)
        padding-top 37px

    &::before
        position absolute
        top 15px
        left 23px
        display block
        fontHvThin60()
        color c_white-transparent-03
        content '{'

    &::after
        position absolute
        top 15px
        right 23px
        display block
        fontHvThin60()
        color c_white-transparent-03
        content '}'

/*ul*/.info-additional__for-clients
    margin 0
    padding 0
    list-style-type none
    background-color c_darker-2-bg

/*li*/.for-clients__item
    position relative

/*a*/.for-clients__link
    position relative
    z-index 20
    display block
    padding-top 14px
    padding-bottom 14px
    padding-left 58px
    fontHvLight16_24()
    color c_promo-dull
    background-color c_darker-2-bg
    box-shadow inset 0 2px 5px rgba(0, 0, 0, .28)
    transition background-color .4s, color .4s

    &:hover
    &:focus
        color c_white
        background-color c_promo-dark
        text-decoration none

    &:active
        color c_white-darken
        background-color c_promo-dark
        text-decoration none

    &:hover + .for-clients__tooltip
        right 300px
        opacity 1

        @media (max-width: xs)
            // top -45px
            left 48px
            right auto
            z-index 30


.for-clients__tooltip
    position absolute
    right -400px
    top 0
    min-height 52px
    min-width 275px
    padding-top 9px
    padding-right 20px
    padding-bottom 9px
    padding-left 20px
    border-radius 3px
    fontHvRoman14_16()
    color c_white
    background-color c_contrast-transparent
    box-shadow 0 0 5px rgba(0, 0, 0, .75)
    transition right .4s, opacity .4s
    opacity 0

    @media (max-width: xs)
        top auto
        bottom 45px
        left 2000px
        transition left .4s, opacity .4s

    &::after
        position absolute
        right -18px
        // top 0
        // bottom 0
        top 17px
        margin auto
        width 0
        height 0
        border 10px solid transparent
        border-left 8px solid c_contrast-transparent
        content ''

        @media (max-width: xs)
            display none
