.enter-page__additional-info
    // position absolute
    // z-index 20
    // right 0
    // top 0
    // bottom 0
    // position relative
    position fixed
    top 0
    right 0
    bottom 0
    margin-top auto
    margin-bottom auto
    z-index 20
    width 284px
    min-width 284px
