@import './helpers/_variables'
@import './helpers/_mixins'
@import './helpers/_block_mixins'


.medical-content__header--primary
    padding-left default_padding
    padding-right default_padding
    background-color #5e7b9b
    background-image url(../images/bg-medical-top.jpg)

.medical-content__header--secondary
    background-color #87572B
    background-image url(../images/bg-medical-header-secondary.jpg)
    background-position bottom center


.presentation-content__title--main
    $header_title_main_fz_mod = 50 / $base_fz
    .medical-content__header--primary &
        fontHvBold50_auto()
        margin-top 0
        margin-bottom -5px
        scalabilityMixin({ margin-bottom: -5px}, 50, fontHvBold50_auto)

        @media (max-width md)
            font-size 35px
            scalabilityMixin({ margin-bottom: -5px}, 35)

    $header_title_main_fz_mod = 48 / $base_fz
    .medical-content__header--secondary &
        fontHvBold48_auto()
        margin-top 0
        margin-bottom -5px
        text-transform uppercase
        color c_white
        scalabilityMixin({ margin-bottom: -5px}, 48, fontHvBold48_auto)

        @media (max-width md)
            font-size 35px
            scalabilityMixin({ margin-bottom: -5px}, 35)

.presentation-content__title--secondary
    $header_title_secondary_fz_mod = 36 / $base_fz
    .medical-content__header--primary &
        fontHvBold42_44()
        margin-top 0
        margin-bottom 0
        scalabilityMixin(false, 10, fontHvBold42_44)

        @media (max-width md)
            font-size 28px

    $header_title_secondary_fz_mod = 44 / $base_fz
    .medical-content__header--secondary &
        fontHvLight44_auto()
        margin-top 0
        margin-bottom 0
        color c_darkest-font
        text-transform uppercase
        color c_white
        scalabilityMixin(false, 44, fontHvLight44_auto)

        @media (max-width md)
            font-size 30px


.presentation-content__mission
    padding-bottom 55px
    scalabilityMixin({ padding-bottom: 55px }, 18)


.medical-content__services-promo /*.default-section*/
    .default-section__content
        background-repeat no-repeat
        background-position -39px 185px
        background-image url(../images/bg-medical-services-promo.png)

    .info-block__content
        //

    .alternatives-list
        //


.medical-content__company-news
    > .media-block__header
        min-height 168px
        padding-top 41px
        background-color #fff6d9
        background-repeat no-repeat
        background-image url(../images/bg-medical-news.jpg)
        background-size cover
        background-position 50% 100%

        $scalable_props = {
            min-height: 168px
            padding-top: 41px
        }
        scalabilityMixin($scalable_props)


.medical-content__news-categories/*.custom-banner--v1*/
    background-color #021e3b
    background-repeat no-repeat
    background-image url(../images/bg-medical-news-categories.jpg)
    background-size cover
    background-position center


.medical-content__publications-collection
    background-color #fad5de
    background-image url(../images/bg-medical-publications-collection.jpg)


.medical-content__publication-pricing /*.default-section*/
    padding-top 39px
    scalabilityMixin({ padding-top: 39px })

    .media-block__header
        min-height 252px
        background-color #eae1d5
        background-repeat no-repeat
        background-image url(../images/bg-publications-pricing.jpg)
        background-size cover
        background-position center
        scalabilityMixin({ min-height: 252px })


.medical-content__company-profile /*.default-section*/
    padding-top 50px
    padding-bottom 20px

    $scalable_props = {
        padding-top: 50px
        padding-bottom: 20px
    }
    scalabilityMixin($scalable_props)

    .media-block
        padding-bottom 0
        margin-bottom 40px

        $scalable_props = {
            padding-bottom: 0
            margin-bottom: 40px
        }
        scalabilityMixin($scalable_props)

    .media-block__header
        height 258px
        background-image url(../images/bg-medical-company-profile.jpg)
        scalableMixin({ height: 258px })

    .media-block__content
        padding-left medium_padding - 5px
        padding-right medium_padding - 5px

        $scalable_props = {
            padding-left: medium_padding - 5px
            padding-right: medium_padding - 5px
        }
        scalabilityMixin($scalable_props, 18)

        @media (max-width bp_reduced-x-padding)
            padding-left reduced_padding
            padding-right reduced_padding

            $scalable_props = {
                padding-left: reduced_padding
                padding-right: reduced_padding
            }
            scalabilityMixin($scalable_props, 18)

        @media (max-width bp_lower-x-padding)
            padding-left lower_padding
            padding-right lower_padding

            $scalable_props = {
                padding-left: lower_padding
                padding-right: lower_padding
            }
            scalabilityMixin($scalable_props, 18)

        @media (max-width: lg)
            padding-left small_padding
            padding-right small_padding

            $scalable_props = {
                padding-left: small_padding
                padding-right: small_padding
            }
            scalabilityMixin($scalable_props, 18)

        p.important-text > .inline-block:first-of-type
            margin-right 15px
            scalabilityMixin({ margin-right: 15px }, 30)



.presentation-content__search-and-promo-tools /*.default-section*/
    .media-block__header
        background-image url(../images/bg-medical-presentation-instruments.jpg)


.medical-content__header--secondary /*header*/
    margin-bottom 55px
    scalabilityMixin({ margin-bottom: 55px})


.medical-content__contacts-and-chat /*.default-section*/
    padding-top 40px
    scalabilityMixin({padding-top: 40px})

    .media-block__header
        min-height 215px
        padding-left original_padding
        padding-right original_padding
        padding-top 30px
        padding-bottom 30px
        background-repeat no-repeat
        background-size cover
        background-image url(../images/bg-medical-contacts-and-chat.jpg)

        $scalable_props = {
            min-height: 215px
            padding-left: original_padding
            padding-right: original_padding
            padding-top: 30px
            padding-bottom: 30px
        }
        scalabilityMixin($scalable_props)


