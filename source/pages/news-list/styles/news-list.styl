.page-nav__togglable-panel
    position absolute
    z-index -1
    top 0
    left (72px - 245px)
    box-sizing border-box
    height 100vh
    width 245px
    padding-top 30px
    padding-bottom 30px
    background-color $c_black-transparent-09
    opacity 0
    transition left 0.4s ease, opacity 0.4s ease, right 0.4s ease

    @media (max-width $xsm)
        top 100%
        // top -100vh
        left auto
        right 100%
        width 100%
        height auto
        transition right 0.4s ease, opacity 0.4s ease

    // @media (max-width $xss)
    //     width calc(100vw - 72px - 16px)
    //     +ie-10-11-only()
