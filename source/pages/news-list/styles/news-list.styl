.page-nav
    position relative
    z-index 3
    width 72px
    min-width 72px
    flex-basis 72px
    box-shadow 9px 0 36px 0 rgba(0, 0, 0, 0.2)


    @media (min-width $xsm+1)
        &::after  // заглушка для того, чтобы togglable-panel не перекрывали .page-nav под кнопками меню
            position absolute
            z-index 1
            width 100%
            height 100%
            background-color $c_white
            content ''

    @media (max-width $xsm)
        min-width 100%
        min-height 79px
        flex-basis 100%

.page-nav__menu  // ul
    position relative
    z-index 1
    padding 0
    margin 0
    background-color $c_white

    @media (max-width $xsm)
        display flex
        flex-wrap wrap

.page-nav__menu-item  // li
    list-style none

    @media (max-width $xsm)
        flex-basis 81px
        flex-grow 1

.page-nav__menu-link  // a
    position relative
    z-index 1
    display block
    min-height 57px
    border-bottom 1px solid $c_light
    color $c_dark-6
    background-color $c_white
    cursor pointer
    outline none
    text-decoration none
    transition color 0.4s ease, background-color 0.4s ease, border-color 0.4s ease

    @media (max-width $xsm)
        min-height 65px
        max-height 65px
        border-bottom none
        border-top 1px solid $c_light

    &:hover
    &:focus
        color $c_dark-6
        background-color $c_light-2

    &:active
        color $c_white
        background-color $c_bright-dark
        border-bottom-color $c_bright-dark

    &::before
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        margin auto
        text-align center
        background-repeat no-repeat
        background-size contain
        background-position center
        transition background-image 0.4s ease
        content ''

    .page-nav__menu-item:first-of-type &
        border-top 1px solid $c_light

        &:active
            border-top-color $c_bright-dark

.page-nav__menu-link--active
    color $c_white
    background-color $c_bright
    border-bottom-color $c_bright
    // cursor default

    &:hover
    &:focus
        color $c_white
        background-color $c_bright-dark
        border-bottom-color $c_bright-dark

    &:active
        background-color $c_bright-dark
        border-bottom-color $c_bright-dark
        border-top-color $c_bright-dark

    @media (max-width $xsm)
        border-bottom-color transparent
        border-top-color $c_bright

        &:hover
        &:focus
            border-bottom-color $c_bright-dark

        &:active
            border-bottom-color transparent
            border-top-color $c_bright-dark

