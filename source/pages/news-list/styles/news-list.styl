.page-nav
    position relative
    z-index 3
    width 72px
    min-width 72px
    flex-basis 72px
    box-shadow 9px 0 36px 0 rgba(0, 0, 0, 0.2)


    @media (min-width $xsm+1)
        &::after  // заглушка для того, чтобы togglable-panel не перекрывали .page-nav под кнопками меню
            position absolute
            z-index 1
            width 100%
            height 100%
            background-color $c_white
            content ''

    @media (max-width $xsm)
        min-width 100%
        min-height 79px
        flex-basis 100%

.page-nav__menu  // ul
    position relative
    z-index 1
    padding 0
    margin 0
    background-color $c_white

    @media (max-width $xsm)
        display flex
        flex-wrap wrap

.page-nav__menu--fixed
    @media (min-width $xsm + 1px)
        position fixed
        top 0
        z-index 10
        width 72px

    &::before
        background-color $c_white
        content ''

        @media (min-width 1384px + 1px)
            position fixed
            left 0
            top 0
            bottom 0
            width calc((100% - 1366px)/2)
            box-shadow -3px 0 19px -9px rgba(0,0,0,0.5) inset

    &::after
        position absolute
        z-index 11
        width 100%
        height 100%
        background-color $c_white
        content ''

.page-nav__menu-item  // li
    list-style none

    @media (max-width $xsm)
        // flex-basis 81px
        flex-basis 73px
        flex-grow 1

    @media (max-width $xsms)
        flex-basis 57px

    @media (max-width $xxs)
        flex-basis 48px

    @media (max-width $xxxs)
        flex-basis 43px

.page-nav__menu-link  // a
    position relative
    z-index 1
    box-sizing border-box
    display block
    min-height 57px
    border-bottom 1px solid $c_light
    color $c_dark-6
    background-color $c_white
    cursor pointer
    outline none
    text-decoration none
    transition color 0.4s ease, background-color 0.4s ease, border-color 0.4s ease

    @media (max-width $xsm)
        min-height 65px
        max-height 65px
        border-bottom none
        border-top 1px solid $c_light

    &:hover
    &:focus
        text-decoration none
        color $c_dark-6
        background-color $c_light-2

    &:active
        color $c_white
        background-color $c_bright-dark
        border-bottom-color $c_bright-dark

    &::before
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        margin auto
        text-align center
        background-repeat no-repeat
        background-size contain
        background-position center
        text-decoration none
        transition background-image 0.4s ease
        content ''

    .page-nav__menu-item:first-of-type &
        border-top 1px solid $c_light

        &:active
            border-top-color $c_bright-dark

.page-nav__menu-link--active
    color $c_white
    background-color $c_bright
    border-bottom-color $c_bright
    // cursor default

    &:hover
    &:focus
        color $c_white
        background-color $c_bright-dark
        border-bottom-color $c_bright-dark

    &:active
        background-color $c_bright-dark
        border-bottom-color $c_bright-dark
        border-top-color $c_bright-dark

    @media (max-width $xsm)
        border-bottom-color transparent
        border-top-color $c_bright

        &:hover
        &:focus
            border-bottom-color $c_bright-dark

        &:active
            border-bottom-color transparent
            border-top-color $c_bright-dark

