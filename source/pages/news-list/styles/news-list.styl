.filters-list  // ul
    padding 0
    margin 0

.filters-list--theme--dull
    //

.filters-list--theme--bright
    //

.filters-list__item  // li
    list-style none

.filters-list__item--active
    border-width 1px
    border-style solid

    .filters-list--theme--dull &
        border-color $c_dull-light

    .filters-list--theme--bright &
        border-color $c_bright

.filters-list__filter  // a
    fontHvRoman14_30()
    text-decoration none
    text-transform uppercase
    cursor pointer

    .filters-list--theme--dull &
        color $c_dull-dark

    .filters-list--theme--bright &
        color $c_bright

    .filters-list__item--active &
        fontHvMedium14_30()




