.page-nav
    background-color $c_black-transparent-09

.page-nav__menu  // ul
    padding 0
    margin 0

.page-nav__menu-item  // li
    list-style none

.page-nav__togglable-panel
    //

.page-nav__togglable-panel-title  // h
    fontHvRoman24_auto()
    color $c_bright

.page-nav__submenu  // ul
    padding 0
    margin 0

.page-nav__submenu-item  // li
    list-style none

.page-nav__submenu-link  // a
    fontHvRoman15_30()
    color $c_white
    text-decoration none
    transition background-color 0.4s ease

    &:hover
    &:focus
        background-color $c_dark-2

    &:active
        color $c_light-3
        background-color $c_dark-3




.news-nav  // section.news-list-content__nav
    background-color $c_dull

.news-nav__add-news  // a
    fontHvMedium18_30()
    color $c_white
    text-decoration none

.news-nav__menu  // ul
    padding 0
    margin 0
    list-style-type none

.news-nav__menu-item
    //

.news-nav__menu-link
    fontHvMedium18_30()
    color $c_white




