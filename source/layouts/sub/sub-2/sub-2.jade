    link(href='./css/sub_style.css' rel='stylesheet')


block append scripts
    script(src='./js/sub_js.js')


block left_side
    nav.external-page__navigation.nav-external
        ul.nav-external__list
            li.nav-external__item
                a.nav-external__link.nav-external__link--lang-selection(href='#') Rus
                ul.lang-selection__popup-1.lang-selection
                    li.lang-selection__item
                        a.lang-selection__link(href='#') Eng
                    li.lang-selection__item
                        a.lang-selection__link(href='#') Chi
                    li.lang-selection__item
                        a.lang-selection__link(href='#') Ita
                ul.lang-selection__popup-2.languages
                    li.languages__item
                        a.languages__link(href='#') Deutch
                    li.languages__item
                        a.languages__link(href='#') Espanol
                    li.languages__item
                        a.languages__link(href='#') Francais
            li.nav-external__item
                a.nav-external__link.nav-external__link--logo(href='#')
                    img.logo--white-small.img-responsive(src='images/img-uh-logo.svg' width='100' height='81')
                .logo__popup
                    | Бесплатный Международный
                    | Туристический Справочник для
                    | отелей и операторов
            li.nav-external__item.position-static
                a.nav-external__link.nav-external__link--sign-in(href='#sign-in') Вход
                section#sign-in.sign-in__popup
                    form#sign-in_form(action='#', method='POST')
                        header.sign-in__header Войти
                        .custom-label--v1
                            input#sign-in__login.sign-in__login(type='text', name='login')
                            label.sign-in__label Логин
                        .custom-label--v1
                            input#sign-in__password.sign-in__password(type='password', name='password')
                            label.sign-in__label Пароль
                        a.sign-in__forgot-password(href='#') Забыли пароль?
                        button.btn.btn--v5(type='submit') Войти
                    a.btn.btn--v6(href='#') Регистрация
                    
            li.nav-external__item.nav-external__item--special
                a.nav-external__link.nav-external__link--about(href='#') О нас
            li.nav-external__item
                a.nav-external__link.nav-external__link--xml-test(href='#') XML-тест
 

