.slider__controls  // ul
    padding 0
    margin 0
    position relative
    display block

    &::before
    &::after
        position absolute
        bottom 50%
        box-sizing border-box
        width 15.5%
        height 53%
        border-bottom 3px dotted $c_white-transparent-05
        content ''

    &::before
        left 0
        border-radius 0 0 0 9px
        border-left 3px dotted $c_white-transparent-05

    &::after
        right 0
        border-radius 0 0 9px 0
        border-right 3px dotted $c_white-transparent-05

.slider__controls-item  // li
    display inline-block
    vertical-align top
    list-style none
    margin-right 7px

    &:last-of-type
        margin-right 0

.slider__controls-label  // label
    position relative
    display block
    overflow hidden
    height 76px
    width 112px
    background-color $c_white-transparent-03
    border 5px solid $c_white-transparent-02
    cursor pointer
    filter grayscale(1)
    transition background-color 0.4s ease, border-color 0.4s ease, filter 0.4s ease

