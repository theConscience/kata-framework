@import 'helpers/_variables'
@import 'helpers/_block_mixins'


.slider
    //

.slider--extended
    //

.slider--type--1
    min-height 523px
    background-color $c_contrast

.slider__radio-control
    display none

    &[value='to-slide-1']:checked ~ .slider__inner .slider__slide[data-slide-number='1']
    &[value='to-slide-2']:checked ~ .slider__inner .slider__slide[data-slide-number='2']
    &[value='to-slide-3']:checked ~ .slider__inner .slider__slide[data-slide-number='3']
    &[value='to-slide-4']:checked ~ .slider__inner .slider__slide[data-slide-number='4']
        opacity 1

    &[value='to-slide-1']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-1']
    &[value='to-slide-2']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-2']
    &[value='to-slide-3']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-3']
    &[value='to-slide-4']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-4']
        background-color $c_black-transparent-03
        border-color $c_black-transparent-02
        filter none
        cursor default

        &:hover
        &:focus
            border-color $c_black-transparent-05

