@import 'helpers/_variables'
@import 'helpers/_block_mixins'


.slider
    //

.slider--type--1
    //

.slider__radio-control
    display none

    &[value='to-slide-1']:checked ~ .slider__inner .slider__slide[data-slide-number='1']
    &[value='to-slide-2']:checked ~ .slider__inner .slider__slide[data-slide-number='2']
    &[value='to-slide-3']:checked ~ .slider__inner .slider__slide[data-slide-number='3']
    &[value='to-slide-4']:checked ~ .slider__inner .slider__slide[data-slide-number='4']
        opacity 1

    &[value='to-slide-1']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-1']
    &[value='to-slide-2']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-2']
    &[value='to-slide-3']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-3']
    &[value='to-slide-4']:checked ~ .slider__inner .slider__controls-label[for='slider__to-slide-4']
        background-color $c_black-transparent-03
        border-color $c_black-transparent-02
        filter none
        cursor default

.slider__inner
    position relative
    text-align center

.slider__title  // h
    margin-top 0

.slider__promo-text

    .slider--type--1 &
        fontHvBold40_48()
        color $c_white

.slider__description

    .slider--type--1 &
        fontHvLight24_30()
        color $c_white

.slider__additional-info

    .slider--type--1 &
        fontHvBold14_18()
        color $c_dull
        background-color $c_white-transparent-063

.slider__slides  // ul
    position absolute
    z-index -1
    padding 0
    margin 0
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    background-color $c_black-transparent-05

    &::after
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        margin auto
        background-color $c_contrast-5-transparent-05
        content ''

.slider__slide  // li
    position absolute
    list-style none
    overflow hidden
    width 100%
    height 100%
    opacity 0
    transition opacity 0.4s ease

.slider__slide-image  // img
    position absolute
    top -9999px
    bottom -9999px
    left -9999px
    right -9999px
    margin auto
    height auto
    width 100%

.slider__controls  // ul
    padding 0
    margin 0

.slider__controls-item  // li
    display inline-block
    vertical-align top
    list-style none

.slider__controls-label  // label
    position relative
    display block
    overflow hidden
    height 76px
    width 112px
    background-color $c_white-transparent-03
    border 5px solid $c_white-transparent-02
    cursor pointer
    filter grayscale(1)
    transition background-color 0.4s ease, border-color 0.4s ease, filter 0.4s ease

    // .slider__controls-item:first-of-type &
    //     background-color $c_black-transparent-03
    //     border-color $c_black-transparent-02
    //     filter none

.slider__controls-image  // img
    position absolute
    top -9999px
    bottom -9999px
    left -9999px
    right -9999px
    margin auto
    // width 112px
    width auto
    height 76px
