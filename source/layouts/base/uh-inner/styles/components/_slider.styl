.slider__inner
    position relative
    z-index 0
    box-sizing border-box
    padding-top 37px
    padding-left 8.33%
    padding-right 8.33%
    padding-bottom 45px
    text-align center
    background-color $c_black-transparent-02
    // background-repeat no-repeat
    // background-position center
    // background-size cover
    // transition background-image 0.4s ease-in-out
    // animation slidechange 0.4s ease

    &::after
        position absolute
        z-index 1
        top 0
        right 0
        bottom 0
        left 0
        margin auto
        background-color $c_contrast-transparent-036
        content ''

    > *
        position relative
        z-index 2

.slider__title  // h
    margin-top 0
    display none

.slider__logo
    //

.slider__logo-wrapper  // a
    position relative
    display block

    &::before
    &::after
        position absolute
        top 50%
        box-sizing border-box
        width 33.7%
        height 53%
        border-top 3px dotted $c_white-transparent-05
        content ''

    &::before
        left 0
        border-radius 9px 0 0 0
        border-left 3px dotted $c_white-transparent-05

    &::after
        right 0
        border-radius 0 9px 0 0
        border-right 3px dotted $c_white-transparent-05

.slider__logo-image  // img
    display block
    max-width 23.6%
    height auto
    margin 0 auto

.slider__content
    box-sizing border-box
    padding-top 40px
    padding-right 7.9114%
    padding-bottom 65px
    padding-left 7.9114%
    border-left 3px dotted $c_white-transparent-05
    border-right 3px dotted $c_white-transparent-05

.slider__promo-text  // h1
    margin-top 0
    margin-bottom 26px

    .slider--type--1 &
        fontHvBold40_48()
        color $c_white

.slider__description
    margin 0

    .slider--type--1 &
        fontHvLight24_30()
        color $c_white

.slider__additional-info
    position absolute
    left 0
    bottom 32px
    display inline-block
    padding-top 6px
    padding-right 21px
    padding-bottom 5px
    padding-left 32px

    &::before
        position absolute
        left 21px
        content '*'

    .slider--type--1 &
        fontHvBold14_18()
        color $c_dull
        background-color $c_white-transparent-063

.slider__controls  // ul
    position relative
    display block
    margin 0
    margin-bottom -8px  // compensation of li margin-bottom
    padding 0
    padding-left 12%
    padding-right 12%

    .slider--extended &
        padding-left 18%
        padding-right 18%

    &::before
    &::after
        position absolute
        bottom 50%
        box-sizing border-box
        width 12%
        height 53%
        border-bottom 3px dotted $c_white-transparent-05
        content ''

        .slider--extended &
            width 18%

    &::before
        left 0
        border-radius 0 0 0 9px
        border-left 3px dotted $c_white-transparent-05

    &::after
        right 0
        border-radius 0 0 9px 0
        border-right 3px dotted $c_white-transparent-05

.slider__controls-item  // li
    display inline-block
    vertical-align top
    list-style none
    margin-left 8px
    margin-right -1px
    margin-bottom 8px

    &:last-of-type
        margin-right 0

.slider__controls-label  // label
    position relative
    display block
    box-sizing content-box
    overflow hidden
    height 76px
    width 112px
    margin-bottom 0
    border 5px solid $c_white-transparent-02
    background-color $c_white-transparent-03
    cursor pointer
    filter grayscale(1)
    transition background-color 0.4s ease, border-color 0.4s ease, filter 0.4s ease
    outline none

    &:hover
    &:focus
        border-color $c_white-transparent-07

    &:active
        border-color $c_white

    // .slider__controls-item:first-of-type &
    //     background-color $c_black-transparent-03
    //     border-color $c_black-transparent-02
    //     filter none

.slider__controls-image  // img
    position absolute
    top -9999px
    bottom -9999px
    left -9999px
    right -9999px
    margin auto
    // width 112px
    width auto
    height 76px

.slider__slides  // ul
    position absolute
    z-index -1
    padding 0
    margin 0
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    background-repeat no-repeat
    background-position center
    background-size cover

