@import 'helpers/_variables';

$gutter_std_X2 = $gutter-std * 2 // 64px
$gutter_for_calc = 100% - $gutter_std_X2


.l-row
    display flex
    width 100%
    justify-content flex-start
    align-items flex-start

.l-row-wrap
    flex-wrap wrap

.l-row-x-margins
    margin-left $gutter-std
    margin-right $gutter-std
    width calc(100% - 64px)

.l-row-y-margins
    margin-top $gutter-std
    margin-bottom $gutter-std

.l-row-bottom-margin
    margin-bottom 11px

.l-row-gutters > [class|="l-col"]
    margin-left $gutter-std
    margin-right $gutter-std

.l-row-gutters > [class|="l-col"]:first-of-type
    margin-left 0

.l-row-gutters > [class|="l-col"]:last-of-type
    margin-right 0

.l-row-main-start
    justify-content flex-start

.l-row-main-end
    justify-content flex-end

.l-row-main-around
    justify-content space-around

.l-row-main-between
    justify-content space-between

.l-row-main-center
    justify-content center

.l-row-cross-start
    align-items flex-start

.l-row-cross-end
    align-items flex-end

.l-row-cross-center
    align-items center

.l-row-cross-stretch
    align-items stretch

.l-row-cross-baseline
    align-items baseline

// .l-row > [class|="l-col"]
//     margin-left

[class|="l-col"]
    box-sizing border-box

.l-col-padding
    padding-left $pd-std
    padding-right $pd-std

.l-col-padding-left
    padding-left $pd-std

.l-col-padding-right
    padding-right $pd-std

.l-col-fill
    flex-grow 1

.l-col-1-2
.l-col-2-4
    width 50%

.l-col-1-4
    width 25%

.l-col-1-3
    width 33.3333%

.l-col-2-3
    width 66.6666%

.l-col-3-4
    width 75%

.l-col-full
.l-col-1-1
    width 100%

.l-col-basis-100
    flex-basis 100px

.l-col-basis-200
    flex-basis 200px

.l-col-basis-300
    flex-basis 300px

.l-col-basis-400
    flex-basis 400px

.l-col-basis-500
    flex-basis 500px

.l-col-basis-600
    flex-basis 600px


.l-col-offset-100
    margin-left 100px

.l-col-offset-200
    margin-left 200px

.l-col-offset-300
    margin-left 300px

.l-col-offset-400
    margin-left 400px

.l-col-offset-500
    margin-left 500px

.l-col-offset-600
    margin-left 500px
