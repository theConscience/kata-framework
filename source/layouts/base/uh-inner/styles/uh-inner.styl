.site-title
    fontHvLight14_21()
    color $c_dark
    text-transform capitalize


.site-language
    position relative
    width 180px
    height 32px
    border 1px solid $c_light

    &::after
        position absolute
        z-index 10
        top 11px
        right 4%
        width 0
        height 0
        border-style solid
        border-width 4px 4px 0 4px
        border-color $c_black transparent transparent transparent
        transition transform 0.4s ease
        content ''

        .site-language--open&
            transform rotate3D(0, 0, 1, 180deg)


/*ul*/.site-language__menu
    position relative
    box-sizing border-box
    overflow hidden
    height 32px
    padding 0
    margin 0
    transition height 0.4s ease

    .site-language--open &
        height (32+31*2)px


/*li*/.site-language__menu-item
    box-sizing border-box
    list-style none
    border-top 1px solid $c_light  // height 31px
    background-color $c_white
    opacity 1
    transition opacity 0.4s ease, background-color .2s ease

    &:hover
    &:focus
        background-color $c_light-2

    &:active
        background-color $c_light

    .site-language--open &
        opacity 1

/*li*/.site-language__menu-item--active
    border-top 1px solid $c_white  // height 31px
    background-color $c_white !important
    opacity 1

/*a*/.site-language__menu-link
    // fontHvLight14_21()
    fontHvLight14_30()
    display block
    // padding 10px 15px  // height 41px
    padding 0 4% 1px
    color $c_black
    text-transform capitalize
    text-decoration none
    cursor pointer

    // .site-language__menu-item--active &
    //     fontHvLight14_30()
    //     padding 0 4%

    &:hover
    &:focus
