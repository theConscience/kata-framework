.uh-inner-page__inner  // .body-inner
    position relative
    overflow hidden
    display flex
    flex-wrap wrap
    max-width 1366px
    margin 0 auto
    // box-shadow 0 0 30px rgba(0,0,0,0.5)
    box-shadow 6px 0 30px -5px rgba(0,0,0,0.5)
    // width (100% - 23%)
    // max-width calc(1366px - 23%)
    // margin-right 23%
    // transform translateX(calc(-50% - 23%/2))
    // transition width 0.4s ease

.uh-inner-page__inner--extended
    // width calc(100% - 60px)
    // max-width (1366px - 60px)
    // margin-right 60px
    // transform translateX(calc(-50% - 60px/2))

.uh-inner-page__header  // header
    // flex-basis (100% - 23%)
    // min-width (100% - 23%)
    // margin-right 23%
    width (100% - 23%)
    transition width 0.4s ease

    // bootstrap reset
    &.page-header
        padding-bottom 0
        margin 0
        border-bottom none

    @media (max-width $xs)
        width 100%
        transition none

    .uh-inner-page--extended &
        // flex-basis calc(100% - 60px)
        // min-width calc(100% - 60px)
        // margin-right 60px
        width calc(100% - 60px)  // IE не умеет делать transition: width если width посчитан через calc() :)

        @media (max-width $xs)
            width 100%

.uh-inner-page__aside  // aside
    position absolute
    z-index 10
    left calc(100% - 23%)
    right 0
    //
    width 23%
    transition width 0.4s ease, left 0.4s ease

    @media (max-width $xs)
        position absolute  // xx
        top 0px  //xx
        // overflow hidden
        left auto
        width 100%
        height auto
        transition height 0.4s ease

    .uh-inner-page--extended &
        // width calc(60px)  // gracefull degradation for IE - ослик не умеет делать transition: width если width посчитан через calc() :)
        left calc(100% - 60px)

        @media (max-width $xs)
            left auto
            height 110px

.uh-inner-page__aside--fixed
    position fixed
    top 0
    bottom 0
    left calc((100% - 1366px) / 2 + 1366px * 0.77)
    width calc(1366px * 0.23)

    @media (max-width 1384px)
        left calc(100% - 23%)
        width 23%

    @media (max-width $xs)
        position absolute
        top 0px  //xx
        // overflow hidden
        left auto
        width 100%
        height auto
        transition height 0.4s ease

    &::after
        @media (min-width $xs + 1px)
            position absolute
            top 0
            left 100%
            z-index 10
            width calc((100vw - 1366px) / 2)
            height 100%
            background $c_white
            box-shadow 6px 0 19px -9px rgba(0,0,0,0.5) inset
            transition left 0.4s ease
            content ''

            +ie-10-11-only()
                transition none


    .uh-inner-page--extended &
        left calc((100% - 1366px) / 2 + 1366px - 60px)

        &::after
            @media (min-width $xs + 1px)
                z-index 10
                left 60px

        @media (max-width 1384px)
            left calc(100% - 60px)

        @media (max-width $xs)
