        background-image url(../images/bg-main-menu-chat.png)


.actions-nav  // nav
    position relative
    top 0
    background-color $c_light-7

    @media (max-width $xs)
        transition top 0.4s ease

        &.actions-nav--collapsed
            top -500px

.actions-nav--collapsed
    //

.actions-nav__menu  // ul
    display flex
    flex-wrap wrap
    padding 0
    margin 0

.actions-nav__item  // li
    list-style none
    overflow hidden
    box-sizing border-box
    border-bottom 1px solid $c_light

.actions-nav__item--big
    flex-basis 100%
    min-width 100%

.actions-nav__item--small
    display inline-block
    vertical-align top
    flex-basis 33.3333%
    min-width 33.3333%
    margin-bottom 17px
    +ie-10-11-only()
        flex-basis 0

    &:not(:last-of-type)
        border-right 1px solid $c_light

    .actions-nav--collapsed &
        flex-basis 100%
        min-width 100%
        margin-bottom 0
        border-bottom none

.actions-nav__item--bright
    flex-basis 100%
    min-width 100%
    background-color $c_bright

.actions-nav__link  // a
    fontHvMedium12_17()
    position relative
    display block
    padding-left 60px
    padding-top 13px
    padding-bottom 14px
    padding-right 15px
    color $c_black
    outline none
    text-decoration none
    transition color 0.2s ease, background-color 0.4s ease

    &::before
        position absolute
        left 30px
        top 50%
        transform translateY(-50%) translateX(-50%)
        background-repeat no-repeat
        background-size contain
        content ''

    &:hover
    &:focus
        text-decoration none
        background-color $c_light-2

    &:active
        background-color $c_light-4

    .actions-nav__item--big &
        fontHvLight16_24()
        padding-top 20px
        padding-bottom 20px
        padding-right 15px
        padding-left 75px
        color $c_dark

        .actions-nav--collapsed &
            color $c_light-7

    .actions-nav__item--small &
        fontHvMedium12_17()
        padding-top 46px
        padding-right 15px
        padding-bottom 7px
        padding-left 15px
        text-align center
        color $c_black
        // transition background-color 0.4s ease

        &::before
            top 11px
            left 0
            right 0
            margin 0 auto
            text-align center
            transform none

        &[data-items-count]::after
            fontHvMedium12()
            position absolute
            min-width 10px
            vertical-align baseline
            top 7px
            right 10px
            width 26px
            padding 4px 0
            border-radius 5px
            text-align center
            white-space nowrap
            color $c_white
            background-color $c_bright
            content '+' attr(data-items-count)

        .actions-nav--collapsed &
            padding-left 60px
            padding-top 13px
            padding-bottom 14px
            padding-right 15px
            text-align left
            color $c_light-7

            &::before
                left 30px
                height 26px
                right auto
                top 50%
                transform translateY(-50%) translateX(-50%)

            &[data-items-count]::after
                top 3px
                left 37px
                right auto
                width auto
                padding 1px 3px
                font-size 10px
                background-color $c_light-5

    .actions-nav__item--bright &
        fontHvLight16_21()
        color $c_white

        &:hover
        &:focus
            background-color $c_bright-dark

        &:active
            background-color $c_bright-darkened


        .actions-nav--collapsed &
            color $c_bright

.actions-nav__link--active
    box-shadow inset 0 0 15px 1px $c_light
    cursor default

    &:hover
    &:focus
        text-decoration none
        background-color transparent

    &:active
        background-color transparent

    .actions-nav__item--bright &
        box-shadow inset 0 0 15px 1px $c_bright-darkened

        &:hover
        &:focus
            text-decoration none
            background-color transparent

        &:active
            background-color transparent


.actions-nav__link--invite-partners
    &::before
        width 32px
        height 32px
        background-image url(../images/bg-actions-menu-invite.png)

.actions-nav__link--messages
    &::before
        width 35px
        height 32px
        background-image url(../images/bg-actions-menu-messages.png)

    .actions-nav--collapsed &::before
        height 26px
        width 28px


.actions-nav__link--orders
    &::before
        width 36px
        height 32px
        background-image url(../images/bg-actions-menu-orders.png)

    .actions-nav--collapsed &::before
        height 28px
        width 30px

.actions-nav__link--bills
    &::before
        width 29px
        height 32px
        background-image url(../images/bg-actions-menu-bills.png)

    .actions-nav--collapsed &::before
        height 28px
        width 24px

.actions-nav__link--help
    &::before
        width 24px
        height 24px
        background-image url(../images/bg-actions-menu-help.png)




