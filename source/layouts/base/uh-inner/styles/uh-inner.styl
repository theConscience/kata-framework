.uh-inner-footer  // footer.uh-inner-page__footer
    box-sizing border-box
    display flex
    flex-wrap wrap
    max-height 115px
    border-top 1px solid $c_light
    background-color $c_white

    @media (max-width $xsm)
        max-height none

    > *
        flex-grow 1
        flex-basis 50%
        +ie-10-11-only()
            max-width 50%

        @media (max-width $xsm)
            flex-basis 100%
            +ie-10-11-only()
                max-width none

.uh-inner-footer--extended
    //

.uh-inner-footer__info
    box-sizing border-box
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content flex-start
    align-items flex-start
    margin-top 30px
    padding-left 20px

    @media (max-width $xsm)
        max-height 115px
        margin-bottom 20px

    // > *
    //     flex-grow 1

.uh-inner-footer__copyright
    fontHvLight14_21()
    color $c_dark

.uh-inner-footer__nav  // ul
    padding 0
    margin 0

.uh-inner-footer__nav-item  // li
    list-style none

.uh-inner-footer__nav-link  // a
    fontHvLight14_21()
    display block
    color $c_bright
    text-decoration underline
    transition text-decoration 0.4s ease, color 0.4s ease

    &:hover
    &:focus
        color $c_bright
        text-decoration none

    &:active
        color $c_bright-dark


.uh-inner-footer__payments  // ul
    margin 0
    padding 0
    flex-basis 100%
    width calc(45% - 30px)
    display flex
    justify-content space-around
    flex-wrap wrap

    @media (max-width $xsm)
        justify-content flex-end

    .uh-inner-footer--extended &
        width calc(50% - 30px)

.uh-inner-footer__payments-item  // li
    list-style none

    @media (max-width $xsm)
        margin-left 10px

.uh-inner-footer__payments-link  // a
    //

    &:hover
    &:focus
        //

    &:active
        //

.uh-inner-footer__payments-image  // img
    display block


.uh-inner-footer__social  // ul
    display flex
    box-sizing border-box
    justify-content space-between
    align-items stretch
    margin 0
    padding 0

.uh-inner-footer__social-item  // li
    position relative
    list-style none
    flex-grow 1
    border-right 1px solid $c_light
    text-align center

    @media (max-width $xsm)
        border-top 1px solid $c_light
        min-height 92px

    &:first-of-type
        border-left 1px solid $c_light

        @media (max-width $xsm)
            border-left none


.uh-inner-footer__social-link // a
    position absolute
    display block
    top 0
    right 0
    bottom 0
    left 0
    width auto
    // height 16px
    // margin-bottom 12px
    margin auto
    font-size 0
    font-weight 400
    color $c_contrast-5
    text-decoration none
    cursor pointer
    transition color 0.4s ease, background-color 0.4s ease

    &:hover
    &:focus
        color $c_contrast-2
        background-color $c_light-2
        text-decoration none

    &:active
        background-color $c_light

    &::before
        position absolute
        top 50%
        left 0
        right 0
        margin 0 auto
        transform translateY(-50%)
        font-size 19.6px
        @extend $$font-awesome
        content ''


.uh-inner-footer__social-link--fb
    //

    &::before
        content $fa_facebook

.uh-inner-footer__social-link--li
    //

    &::before
        content $fa_linkedin

.uh-inner-footer__social-link--ytb
    //

    &::before
        content $fa_youtube

.uh-inner-footer__social-link--inst


    &::before
        content $fa_instagram
