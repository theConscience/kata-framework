@import 'helpers/_variables'
@import 'helpers/_block_mixins'


.btn
    position relative
    border-radius 0
    transition color .4s, background-color .4s, border .4s

.btn--v5
    width 100%
    fontHvMedium14_20()
    color c_white
    background-color c_contrast

    &:hover
    &:focus
        color c_white-darken
        background-color c_contrast-darken

.btn--v6
    width 100%
    border 1px solid c_contrast
    fontHvMedium14_20()
    color c_contrast
    background-color transparent

    &:hover
    &:focus
        color c_contrast-darken
        background-color c_dark-transparent-bg

.btn--v7
    fontHvLight18_30()
    padding-top 10px
    padding-right 32px
    padding-bottom 9px
    padding-left 32px
    min-width 186px
    border 0
    border-radius 0
    background-color c_contrast
    color c_white

    &:hover
    &:focus
        color c_white-darken
        background-color c_contrast-darken

.btn--v8
    fontHvRoman18_40()
    box-sizing border-box
    min-width 160px
    min-height 53px
    padding-left 33px
    padding-right 33px
    padding-top 7px
    padding-bottom 2px
    border none
    border-bottom 3px solid c_border_btn--v8
    color c_white
    background-color c_btn--v8_bg
    text-align center
    vertical-align middle

    &:hover
    &:focus
        color c_white
        background-color c_btn--v8_bg--hover

    &:active
        color c_medium-font
        background-color c_btn--v8_bg--active
        box-shadow inset 0 0 6px -2px c_black-transparent-05

.btn--v9
    fontHvBold14_18()
    min-width 160px
    min-height 44px
    padding-left 24px
    padding-right 24px
    padding-top 13px
    padding-bottom 13px
    border none
    color c_btn--v9
    background-color c_btn--v9_bg
    text-transform lowercase

    &:hover
    &:focus
        color c_btn--v9
        background-color c_btn--v9_bg--hover

    &:active
        color c_btn--v9--active
        background-color c_btn--v9_bg--active

.btn--v10
    fontRobotoBold13_30()
    box-sizing border-box
    min-height 38px
    border 1px solid c_contrast
    padding-left 20px
    padding-right 20px
    padding-top 4px
    padding-bottom 2px
    color c_contrast

    &:hover
    &:focus
        color c_white
        background-color c_contrast

    &:active
        color c_white-transparent-05


.collapsable__button
    padding-left 38px

    .collapsable__button-state-icon
        position absolute
        left 20px
        top 21px
        width 10px
        height 6px
        background-repeat no-repeat
        background-image url(../images/i-arrow-down.svg)
        transform rotate(180deg)

    .collapsable[data-collapsed=true] & .collapsable__button-state-icon
        transform rotate(0deg)


.btn--3d
    position relative

    &::before
    &::after
        position absolute
        bottom 0
        width 0
        height 0
        border-style solid
        content ''

    &::before
        left -6px
        border-width 0 6px 14px 0
        border-color transparent #181818 transparent transparent

    &::after
        right -6px
        border-width 14px 6px 0 0
        border-color #181818 transparent transparent transparent


.btn--narrow
    min-width 160px


.custom-label--v1
    position relative
    fontHvRoman14_30()

    & > input
        position relative
        z-index 20
        box-sizing border-box
        width 182px
        padding-top 2px
        padding-right 20px
        padding-bottom 1px
        padding-left 20px
        color c_white
        border 1px solid c_medium-border
        background-color transparent

        &:focus + label
        &[data-input=true] + label
            font-size 12px
            left 2px
            top -21px
            color c_contrast

    & > label
        position absolute
        left 20px
        top 2px
        color c_medium-font
        transition top .4s, left .4s, font-size .4s



.custom-checkbox--dark
    // font-size 10px

.custom-checkbox--dark > input[type=checkbox]
    display none
    width 18px
    height 18px
    border 0
    box-shadow none
    outline none

    &:checked + label::after
        opacity 1

.custom-checkbox--dark > label
    position relative
    padding-left 31px
    fontHvLight14_26()
    color c_light-font
    cursor pointer

    &::before
    &::after
        position absolute
        top 2px
        left 0
        width 18px
        height 18px
        content ''

    &::before
        border-radius 2px
        background-color c_seo-3

    &::after
        opacity 0
        background-repeat no-repeat
        background-image url(../images/bg-ok-white.svg)
        background-position 4px 5px
        transition opacity .4s

.custom-checkbox--dark > input:disabled + label
.custom-checkbox--dark > input.is-disabled + label
.custom-checkbox--dark > input.disabled + label
    fontHvLight14_20()
    color c_white
    cursor default

    &::before
        border-radius 0
        background-color c_promo-dull-lighten

    &::after
        background-image url(../images/bg-ok-dark.svg)

.custom-input--dark
    position relative
    max-width 244px
    width 100%

    & > .custom-input__field
        box-sizing border-box
        width 100%
        border 1px solid c_seo-2
        padding-top 1px
        padding-right 20px
        padding-bottom 2px
        padding-left 20px
        fontHvLight14_36()
        color c_white
        background-color transparent
        outline none
        transition box-shadow .4s

        &:hover
        &:focus
            box-shadow 0 0 6px c_seo-2, inset 0 0 3px c_seo-2

    & > .custom-input__validation-state
        position absolute
        background-repeat no-repeat
        background-position 0 0
        display none

.custom-input__field:valid + .custom-input__validation-state
.custom-input__field.is-valid + .custom-input__validation-state
        right -19px - 17px
        top 12px
        display block
        width 17px
        height 14px
        background-image url(../images/bg-ok-1.png)
        background-size 17px 14px

.custom-input__field:invalid + .custom-input__validation-state
.custom-input__field.is-invalid + .custom-input__validation-state
        right -19px - 17px
        top 11px
        display block
        width 17px
        height 17px
        background-image url(../images/bg-err-1.png)
        background-size 17px 14px



.custom-select--dark
    position relative
    max-width 244px
    width 100%

    & > .custom-select__field
        box-sizing border-box
        width 100%
        height: 39px;
        border 1px solid c_seo-2
        padding-top 1px
        padding-right 20px
        padding-bottom 2px
        padding-left 20px
        fontHvLight14_36()
        color c_white
        background-color transparent
        outline none
        transition box-shadow .4s

        &:hover
        &:focus
            box-shadow 0 0 6px c_seo-2, inset 0 0 3px c_seo-2

        & > option
            color c_black

    & > .custom-select__validation-state
        position absolute
        background-repeat no-repeat
        background-position 0 0
        display none

.custom-select__field:valid + .custom-select__validation-state
.custom-select__field.is-valid + .custom-select__validation-state
        right -19px - 17px
        top 12px
        display block
        width 17px
        height 14px
        background-image url(../images/bg-ok-1.png)
        background-size 17px 14px

.custom-select__field:invalid + .custom-select__validation-state
.custom-select__field.is-invalid + .custom-select__validation-state
        right -19px - 17px
        top 11px
        display block
        width 17px
        height 17px
        background-image url(../images/bg-err-1.png)
        background-size 17px 14px

.img--bordered
    border 1px solid #d4d4d4

.img--rounded
    border-radius 50%
